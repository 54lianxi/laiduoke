.game .btn-img{
  width:100%;
}
.game .row{
  display:flex;
  flex-direction: row;
  justify-content: space-between;
}
.game .btn-box{
  width:190rpx;
  position:relative;
  margin-left:100rpx;
}
.game .btn-box2{
  margin-right:100rpx;
}
.game .btn-box .text{
  color:#fff;
