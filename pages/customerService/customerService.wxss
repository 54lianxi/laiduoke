/* pages/customerService/customerService.wxss */
.row{
  display:flex;
  flex-direction: row;
}
text{
  width:27%;
  margin-right:1%;
  text-align: right;
  margin-left:2%;
  font-size:32rpx;
  line-height:40px;
}
input{
  width:90%;
  border:1px solid #ccc;
  height:40px;
  margin:0 auto;
  box-sizing: border-box;
  padding-left:15rpx;
  
}
textarea{
  box-sizing: border-box;
  padding-left:15rpx;
  padding-top:10rpx;
  width:90%;
  margin:0 auto;
  border:1px solid #ccc;
}
.bot10{
  margin-bottom:10px;
}
.title{
  text-align: center;
  margin-top:20px;
  margin-bottom:10px;
}
button{
color:#FFFFFF;
background-color:#1AAD19;
text-align:center;
border:1px solid #1AAD19;
font-size:34rpx;



}
.submit{
  width:90%;
  
}
.sbtn{
  width:35%;
}
input::placeholder{
  font-size:34rpx;
}
.record{
  margin-top:20px;
  text-align: center;
  text-decoration: underline;
  font-size:32rpx;
}
.picDetail{
  position:fixed;
  top:0;
  left:0;  
  z-index:101;
  width:100%;
  height:100%;
  background: rgba(0,0,0,.6);
  overflow:scroll;
}